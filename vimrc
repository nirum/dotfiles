" Mappings
let mapleader=" "
nnoremap ; :
nnoremap : ;

" Options
set termguicolors
set relativenumber
set number
set clipboard="unnamedplus"
set gdefault
set ignorecase
set smartcase
set splitright
set splitbelow
set foldlevelstart=99
set signcolumn="yes"
set tabstop=2
set shiftwidth=2
set expandtab
set nosmartindent
set scrolloff=8
set timeoutlen=500
set updatetime=1000

colorscheme slate
